<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyCode">

    <LinearLayout
        android:id="@+id/telefono"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@android:color/white"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="Introduce el código de verificación enviado al:"
            android:textColor="@android:color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/telefonotv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="+10123456789"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <com.raycoarana.codeinputview.CodeInputView
            android:id="@+id/codigoinput"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:underline_color="#457ad1"
            app:underline_selected_color="@color/colorPrimaryDark"
            app:code_text_color="@color/colorPrimary"
            app:error_color="#77ce9d"
            app:input_type="numeric"
            app:animate_on_complete="false"
            app:length_of_code="6"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">




        </LinearLayout>



        <info.hoang8f.widget.FButton
            android:id="@+id/botonverificar"
            android:textAllCaps="false"
            android:text="Verificar código"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:fButtonColor="@color/botonregistro"
            app:shadowColor="@android:color/white"
            app:shadowEnabled="true"
            app:shadowHeight="3dp"
            app:cornerRadius="5dp">

        </info.hoang8f.widget.FButton>


    </LinearLayout>



</RelativeLayout>