<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentMethod">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/telefono"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="¿Cómo deseas pagar tu pedido?"
                android:textColor="@android:color/black"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="#23BEBEBE"
            android:layout_weight="8.5">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_above="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total a pagar:"
                android:textSize="25sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/precio"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:layout_above="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$200.00"
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_margin="10dp"
                android:layout_above="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Métodos de pago:"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/efectivo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/ic_attach_money_black_24dp"
                android:drawablePadding="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Efectivo"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/stripe"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:drawablePadding="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Pagar con Tarjeta"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/paypal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:drawablePadding="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="PayPal"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:backgroundTint="#ffffff" />


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>